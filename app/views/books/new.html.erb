<div class="form-container">
  <h1>Create book review</h1>
  <%= form_for @book, url: books_path do |book| %>
    <div class="form-group">
      <%= book.label :title, 'Title:' %>
      <%= book.text_field :title, class: 'form-control', :required => true %>
    </div>
    <div class="form-group">
      <%= book.label :author, 'Author:' %>
      <%= book.text_field :author, class: 'form-control', :required => true %>
    </div>
    <div class="form-group">
      <%= book.label :cover, 'Cover:' %>
      <%= book.file_field :cover, :required => true %>
    </div>
    <div class="form-group">
      <%= book.label :description, 'Description:' %>
      <%= book.text_area :description, class: 'form-control', :required => true %>
    </div>
    <div class="form-group">
      <%= book.label 'Genres:' %>
      <%= book.collection_select :genres, Genre.order(:title), :id, :title,
               {}, {:multiple => true, class: 'form-control', :required => true} %>
    </div>
    <%= book.submit 'Create', draft: false, class: 'btn btn-success' %>
    <%= book.submit 'To drafts', draft: true, class: 'btn btn-primary' %>
  <% end %>
</div>
